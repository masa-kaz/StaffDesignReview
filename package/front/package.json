{
  "name": "staffdesignreviewfront",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest --run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "postinstall": "playwright install",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "verify": "run-s lint format type-check test:unit build",
    "verify:full": "run-s lint format type-check test:unit test:e2e build",
    "serve:all": "run-p preview story:preview",
    "show-urls": "node scripts/show-urls.js",
    "serve:auto-open": "node scripts/serve-with-auto-open.js",
    "serve:timeout": "node scripts/serve-with-timeout.js",
    "verify:serve": "run-s verify story:build serve:all show-urls",
    "verify:serve:auto": "run-s verify story:build serve:all serve:auto-open",
    "verify:serve:timeout": "run-s verify story:build serve:all serve:timeout",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "dev:netlify": "netlify dev",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "^0.17.17",
    "histoire": "^0.17.17",
    "@playwright/test": "^1.54.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-oxlint": "~1.8.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "netlify-cli": "^23.7.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.8.0",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^5.0.0",
    "vite-plugin-vue-devtools": "^7.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
